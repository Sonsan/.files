#!/usr/bin/env sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e alsamixer & ;;
	2) pamixer -t ;;
	4) pamixer -i 5 >/dev/null 2>/dev/null ;;
	5) pamixer -d 5 >/dev/null 2>/dev/null ;;
	3) pgrep -x dunst >/dev/null && notify-send "ğŸ“¢ Volume module" "\- Shows volume ğŸ”Š, ğŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

volstat="$(pamixer --get-volume-human)"

echo "$volstat" | grep "muted" >/dev/null && printf "ğŸ”‡\\n" && exit

vol=$(echo "$volstat" | sed 's/.$//')

if [ "$vol" -gt "70" ]; then
	icon="ğŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ğŸ”ˆ"
else
	icon="ğŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
