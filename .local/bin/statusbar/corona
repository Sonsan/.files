#!/bin/sh
case $BLOCK_BUTTON in
    1) pgrep -x dunst >/dev/null &&  notify-send -t 5000 "$(echo | grep "World" ~/.cache/corona | tail -1 | sed "s/\s*//g ; s/â•‘//g ; s/â”‚/;/g ; s/â–²/ğŸ”º/g ; s/â–¼/ğŸ”»/g" | awk -F';' '{print "ğŸ˜·"$8 " ("$4")\nğŸ’€" $5 " ("$6")\nğŸ’®" $7}' | sed 's/\x1b\[[0-9;]*m//g')"
esac

[ "$(stat -c %y ~/.cache/corona | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] && curl -s https://corona-stats.online > ~/.cache/corona

grep "Germany" ~/.cache/corona | sed "s/\s*//g ; s/â•‘//g ; s/â”‚/;/g ; s/â–²/ğŸ”º/g ; s/â–¼/ğŸ”»/g" | awk -F';' '{print "ğŸ˜·"$8 " ("$4") ğŸ’€" $5 " ("$6") ğŸ’®" $7 }' | sed 's/\x1b\[[0-9;]*m//g'
