#!/bin/sh
case $BLOCK_BUTTON in
    1) pgrep -x dunst >/dev/null &&  notify-send "$(echo | grep "World" ~/.cache/corona | head -1 | sed "s/\s*//g ; s/â•‘//g ; s/â”‚/;/g ; s/â–²/ğŸ”º/g ; s/â–¼/ğŸ”»/g" | awk -F';' '{print "ğŸ˜·"$3 " ("$9")\nğŸ’€" $5 " ("$7"%)\nğŸ’®" $4 " ("$8"%)"}' | sed 's/\x1b\[[0-9;]*m//g')"
esac

[ "$(stat -c %y ~/.cache/corona | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] && curl -s https://corona-stats.online > ~/.cache/corona

grep "Germany" ~/.cache/corona | sed "s/\s*//g ; s/â•‘//g ; s/â”‚/;/g ; s/â–²/ğŸ”º/g ; s/â–¼/ğŸ”»/g" | awk -F';' '{print "ğŸ˜·"$6 " ("$9") ğŸ’€" $5 " ("$7"%) ğŸ’®" $4 " ("$8"%)"}' | sed 's/\x1b\[[0-9;]*m//g'
