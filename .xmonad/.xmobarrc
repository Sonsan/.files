-- ~/.xmobarrc

Config {
	font = "xft:SourceCodePro-9",
	bgColor = "#000000",
	fgColor = "#ffffff",
	-- commands from: https://archives.haskell.org/projects.haskell.org/xmobar/#system-monitor-plugins
	commands = [
		Run StdinReader,
    Run Memory ["-t","Mem: <usedratio>%","-H","8192","-L","4096","-h","#FFFFFF","-l","#0000FF","-n","#FFFFFF"] 10,
    Run Network "wls1" ["-t","Net: <rx>, <tx>","-H","200","-L","10","-h","#FFB6B0","-l","#CEFFAC","-n","#FFFFCC"] 10,
		Run CoreTemp [ "--template" , "Temp: <core0>°C | <core1>°C"
                   , "--Low"      , "42"
                   , "--High"     , "70"      
                   , "--low"      , "green"
                   , "--normal"   , "darkorange"
                   , "--high"     , "darkred"
                 ] 50,
		Run BatteryP ["BAT0"]
              ["-t", "Battery: <acstatus><watts>W (<left>%)",
               "-L", "10", "-H", "80", "-p", "3",
               "--", "-O", "<fc=green>Charging</fc> ", "-i", "",
               "-L", "-15", "-H", "-5",
               "-l", "red", "-m", "blue", "-h", "green"] 600,
		Run Date "<fc=#ff0000>%H:%M:%S</fc> <fc=#ff48e1>%a %b %_d</fc>" "date" 10
	],
	sepChar = "%",
	alignSep = "}{",
	template = "%StdinReader% }{ %battery% --- %coretemp% --- %memory% --- %date%"
}
